{% extends 'base.html.twig' %}

{% block body %}
    <div id = "menu">
        Choose a car from your profile or input other:<br /><br />
        {% if cars %}
            <table align="center" bgcolor="gray">
                <tr>
                    <th>NumberPlate</th>
                    <th>Maker</th>
                    <th>Model</th>
                    <th>Car year</th>
                    <th>Transmission</th>
                    <th>Engine Volume</th>
                    <th>Choose</th>
                </tr>
                {% for car in cars %}
                    <tr>
                        <td>{{ car.carId }}</td>
                        <td>{{ car.maker }}</td>
                        <td>{{ car.model }}</td>
                        <td>{{ car.carYear }}</td>
                        <td>{{ car.transmission }}</td>
                        <td>{{ car.engineVolume }}</td>
                        <td><button type="button" class="carChoice">Select</button></td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            No cars available in your profile.<br />
        {% endif %}
        <br />

        {{ form_start(form) }}
        Number plate: {{ form_widget(form.carId) }}<br />
        Car maker: {{ form_widget(form.maker) }}<br />
        Car model: {{ form_widget(form.model) }}<br />
        Car year: {{ form_widget(form.carYear) }}<br />
        Transmission: {{ form_widget(form.transmission) }}<br />
        Engine: {{ form_widget(form.engineVolume) }}<br />
        <br />
        Choose which services you want to apply for your car: <br />
        Total duration can not exceed 5 hours.<br /><br />
        <table align="center" bgcolor="gray">
            <tr>
                <th>Category</th>
                <th>Name</th>
                <th>Cost</th>
                <th>Select</th>
            </tr>
            {% for service in services %}
                <tr>
                    <td>{{ service.serviceCategory }}</td>
                    <td>{{ service.serviceName }}</td>
                    <td>{{ service.cost }}</td>
                    <td><input type="checkbox" name="student_ids[]" class="serviceCheckBox" value="{{ service.id ~ ';' ~ service.cost ~ ';' }}"><br></td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <input size="16" type="text" value="" readonly class="form_datetime">
        <table id="timesTable" align="center" bgcolor="gray">
            <tbody id="serviceTime"></tbody>
        </table>
        <br />
        {{ form_row(form.submit, { 'label': 'Apply for service', 'disabled': 'true' }) }}
        {{ form_end(form) }}
        <br />
    </div>
{% endblock %}
