{% extends 'base.html.twig' %}

{% block title %}<title>Register company</title>{% endblock %}
{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-5">
                <h1>Company registration</h1>
                <div style="color: red">
                {% for message in error %}
                    {{ message }}<br>
                {% endfor %}
                </div>
                <div id="default">
                    {{ form_start(registration_form) }}
                    Company name: {{ form_widget(registration_form.companyName, {'attr': {'class': 'Company'}}) }}</br>
                    Company E-mail: {{ form_widget(registration_form.email, {'attr': {'class': 'Company'}}) }}</br>
                    Company phone number: {{ form_widget(registration_form.phoneNumber, {'attr': {'class': 'Company'}}) }}</br>
                    Company address: {{ form_widget(registration_form.adress, {'attr': {'class': 'Company'}}) }}</br>
                    Password: {{ form_widget(registration_form.plainPassword.first, {'attr': {'class': 'Company'}}) }}</br>
                    Repeat password: {{ form_widget(registration_form.plainPassword.second, {'attr': {'class': 'Company'}}) }}</br>
                    <button class="btn btn-primary">Save</button>
                    {{ form_end(registration_form) }}
                </div>
            </div>
            <div class="col"></div>

        </div>
    </div>




{% block javascripts %}
    {{ parent() }}
    <script src={{ asset('scripts/sweetalert2.all.js') }}></script>
    <script type="text/javascript">
        function alertSuccess() {
            swal({
                title: 'Registration successful',
                text: "You can now login",
                type: 'success',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Ok'
                }).then((result) => {
                    if (result.value)
                    {
                        window.location.replace('/');
                    }
            })
        }
        function alertFailure() {
            swal({
                position: 'center',
                type: 'error',
                title: 'Invalid fields',
                showConfirmButton: false,
                timer: 1500
            })
        }
    </script>
    {% endblock %}


    {%   if tried == true %}
        {%   if success == true %}
            <script>alertSuccess()</script>
        {% else %}
            <script>alertFailure()</script>

        {% endif %}

    {% endif %}

    </body>
{%  endblock %}
