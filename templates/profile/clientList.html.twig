{% extends 'base.html.twig' %}

{% block body %}
            <h1>Client list</h1>
            <table align="center">
                <tr>
                    <th width="80px">User ID</th>
                    <th></th>
                    <th width="120px">Username</th>
                    <th></th>
                    <th width="200px">Email</th>
                    <th></th>
                    <th width="200px">Phone Number</th>
                </tr>
                {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td></td>
                            <td>{{ user.firstName }}</td>
                            <td></td>
                            <td>{{ user.email}}</td>
                            <td></td>
                            <td>{{ user.phoneNumber }}</td>
                        </tr>
                {% endfor %}
            </table>
{% endblock %}