{% extends 'base.html.twig' %}

{% block body %}
    <h3>User Profile</h3>
    <div id = "profile">
        <b>First name:</b> {{ app.user.firstName  }}<br/>
        <b>Last name:</b> {{ app.user.lastName }}<br/>
        <b>Email:</b> {{ app.user.email }} <br/>
        <b>Phone number:</b> {{ app.user.phoneNumber }}<br/>
        <button type="button" id="Edit-profile"><a id="Edit-profile" href="{{ path('profile_edit', {'id': app.user.id}) }}">Edit profile</a><br/></button>
        <br/>
    </div>

{% endblock %}