{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <h5 style="text-align: left"> Your car: </h5>
    ID: {{car.carId}}
    <br>
    Manufacturer: {{car.maker}}
    <br>
    Model: {{car.model}}
    <br>
    Year: {{car.carYear}}
    <h1 style="text-align: center"> Companies that can fix your problem </h1>
    <br>
    
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
         {% set i = 0 %}
        {% for company in companies %}
            <tr>
                <th scope="row">{{i + 1}}</th>
                <td>{{company.company.companyName}}</td>
                <td>{{company.company.email}}</td>
                <td>{{company.company.phoneNumber}}</td>
                <td style="text-align: right"> 
                
                </td>
                
                {% set i = i + 1 %}
            </tr>
            
        {% endfor %}
  </tbody>
</table>
        
    </div>
{% endblock %}