{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(car_form) }}
    <div id="default">
    Car ID: {{ form_widget(car_form.carId, {'attr': {'class': 'Car'}}) }}</br>
    <label style="position: fixed;left: 4.2%">Maker:</label> {{ form_widget(car_form.maker, {'attr': {'class': 'Car', 'style' : 'width: 60.3%'}}) }}</br>
    <label>Model:</label> {{ form_widget(car_form.model, {'attr': {'class': 'Car'}}) }}</br>
    <label style="position: fixed;left: 3.3%">Car Year:</label> {{ form_widget(car_form.carYear, {'attr': {'class': 'Car', 'style' : 'width: 60.3%'}}) }}</br>
    Transmission: {{ form_widget(car_form.transmission, {'attr': {'class': 'Car', 'style' : 'width: 60.3%'}}) }}</br>
    Engine volume: {{ form_widget(car_form.engineVolume, {'attr': {'class': 'Car'}}) }}</br>
    City: {{ form_widget(car_form.city, {'attr': {'class': 'Car'}}) }}</br>
    Service name: {{ form_widget(car_form.serviceName, {'attr': {'class': 'Car', 'style' : 'width: 60.3%'}}) }}</br>
    Comment: {{ form_widget(car_form.comment, {'attr': {'class': 'Car'}}) }}</br>
    </br>
    </div>
    <button class="btn btn-primary" style="position: fixed;bottom: 43%; width: 20%;height: 5%">Register car</button>

    {{ form_end(car_form) }}
{% endblock %}